<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Adapters.DNSAdapter">

    <LinearLayout
        android:id="@+id/ll_dnsData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/card_view"
        android:layout_margin="@dimen/_3sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_domain_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.95"
            android:text="mydomain1234667"
            android:gravity="center"/>


        <TextView
            android:id="@+id/tv_created"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="14/10.20 At 2:00 AM"
            android:textAlignment="center"
            android:gravity="center"/>


        <RelativeLayout
            android:id="@+id/rel_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:text="No Data Found"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/view_line"
        android:visibility="gone"/>



</RelativeLayout>