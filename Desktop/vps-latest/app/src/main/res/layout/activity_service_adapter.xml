<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Adapters.ServiceAdapter">

    <RelativeLayout
        android:id="@+id/rl_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/card_view">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            tools:ignore="UselessParent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp">

                    <RelativeLayout
                        android:id="@+id/rel_power"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_15sdp">

                        <ImageView
                            android:id="@+id/iv_power"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/power_green" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_servicee"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/rel_power"
                        android:text="@string/service">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_hostname"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_servicee"
                        android:text="@string/hostname">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_mainIp"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_40sdp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_hostname"
                        android:text="@string/mainip">

                    </TextView>

                    <RelativeLayout
                        android:id="@+id/tv_nex"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@id/tv_mainIp"
                        android:layout_centerVertical="true"
                        android:visibility="gone">

                        <SeekBar
                            android:id="@+id/seekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/badwidth_seekbar"
                            android:thumb="@null">


                        </SeekBar>

                        <TextView
                            android:id="@+id/tv_bandwidth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="20%"
                            android:textSize="@dimen/_9sdp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_next"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_nex"
                        android:text="@string/nextduedate"
                        android:visibility="gone">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_billing"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_next"
                        android:text="@string/billingcycle"
                        android:visibility="gone">

                    </TextView>

                    <RelativeLayout
                        android:id="@+id/rel_manage"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_toRightOf="@id/tv_billing"
                        android:layout_centerVertical="true"
                        android:background="@drawable/create_ticket_button">


                        <TextView
                            android:id="@+id/tv_create_ticket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/manage"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp" />


                    </RelativeLayout>


                </RelativeLayout>


            </LinearLayout>

        </HorizontalScrollView>
    </RelativeLayout>

</RelativeLayout>