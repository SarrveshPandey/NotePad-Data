<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/card_view">


        <RelativeLayout
            android:id="@+id/realtive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tv_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Reply :"
                android:textColor="@color/ticket_color"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/tv_replier_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toRightOf="@id/tv_customer"
                android:text="Nick Rose"
                android:textColor="#777373"
                android:textSize="@dimen/_10sdp">

            </TextView>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="10:00am"
                android:textColor="#A8A4A4"
                android:textSize="@dimen/_9sdp"
                android:visibility="gone">

            </TextView>

            <TextView
                android:id="@+id/tv_replierDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="10/1/2020"
                android:textColor="#A8A4A4"
                android:textSize="@dimen/_9sdp">

            </TextView>


        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/view_line"
            android:layout_below="@+id/realtive">


        </View>


        <TextView
            android:id="@+id/et_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:hint="sabadlkaldl;sldljafjsajfljs;afjjs;afkj;lsa;fj;saj;fj;sajf;jsafj;sajf;jsa;fj;sj;fjs;afj;lsj;fj;sjf;jsfj;lsajfjsafj;saj;fj;asjf;js;fj;sajfjs;ajf;sja;fj;safj;lsjf;jsajfs;afj;sajf;jsaf;j;l"
            android:textColor="@color/ticket_color"
            android:textSize="@dimen/_11sdp"
            android:layout_below="@+id/view"/>



        <TextView
            android:id="@+id/tv_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:text="(0B)"
            android:textColor="#295FBC"
            android:linksClickable="true"
            android:autoLink="web"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


</RelativeLayout>