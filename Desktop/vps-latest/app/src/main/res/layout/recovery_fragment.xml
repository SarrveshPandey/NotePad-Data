<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_recovery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:text="@string/devicePowerManagement"
        android:textColor="@color/black" />

    <RelativeLayout
        android:id="@+id/rel_button1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:layout_below="@+id/tv_recovery"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_20sdp">


        <TextView
            android:id="@+id/tv_rescue_dsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rescueDesc"
            android:textColor="@color/viewcolorText"
            android:textSize="@dimen/_10sdp" />


        <RelativeLayout
            android:id="@+id/rel_graceful_button"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/tv_rescue_dsc"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/login_screen"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp">

            <TextView
                android:id="@+id/tv_graceful_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/launchRescueMode"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />


        </RelativeLayout>


    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/rel_button1"
        android:layout_marginTop="@dimen/_7sdp"
        android:background="@color/view_line" />


</RelativeLayout>