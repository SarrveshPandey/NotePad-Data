<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:id="@+id/rel_maindns"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_15sdp">

        <RelativeLayout
            android:id="@+id/rel_service"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/service"
                android:textColor="@color/mydevices_color"
                android:textSize="@dimen/_13sdp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/arrow_forward" />

        </RelativeLayout>

        <View
            android:id="@+id/view_service"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/rel_service"
            android:background="@color/view_line"
            android:layout_marginTop="@dimen/_5sdp"/>


        <RelativeLayout
            android:id="@+id/rel_dns"
            android:layout_width="match_parent"
            android:layout_below="@+id/view_service"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="@dimen/_25sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/dns"
                android:textColor="@color/mydevices_color"
                android:textSize="@dimen/_13sdp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/arrow_forward" />

        </RelativeLayout>

        <View
            android:id="@+id/view_dns"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/rel_dns"
            android:background="@color/view_line"
            android:layout_marginTop="@dimen/_5sdp"/>

        <RelativeLayout
            android:id="@+id/rel_apiManagement"
            android:layout_width="match_parent"
            android:layout_below="@+id/view_dns"
            android:layout_height="@dimen/_25sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/apiManagement"
                android:textColor="@color/mydevices_color"
                android:textSize="@dimen/_13sdp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/arrow_forward" />

        </RelativeLayout>
t
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/rel_apiManagement"
            android:background="@color/view_line"
            android:layout_marginTop="@dimen/_5sdp"/>



    </RelativeLayout>


</RelativeLayout>