<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_device_power_management"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:text="@string/devicePowerManagement"
        android:textColor="@color/black" />

    <RelativeLayout
        android:id="@+id/rel_button1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_below="@+id/tv_device_power_management"
        android:layout_marginTop="@dimen/_5sdp">

        <TextView
            android:id="@+id/tv_graceful"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/graceful_shutdown"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />


        <TextView
            android:id="@+id/tv_graceful_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_graceful"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="@string/graceful_desc"
            android:textColor="@color/viewcolorText"
            android:textSize="@dimen/_10sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_graceful_desc"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:id="@+id/tv_graceful_ques"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/do_you_wish"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <RelativeLayout
                android:id="@+id/rel_graceful_button"
                android:layout_width="@dimen/_125sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/login_screen"
                android:text="@string/do_you_wish"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp">


                <ImageView
                    android:id="@+id/iv_graceful_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:src="@drawable/power_icon" />


                <TextView
                    android:id="@+id/tv_graceful_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:text="@string/graceful_shutdown"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />


            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/rel_button1"
        android:layout_marginTop="@dimen/_7sdp"
        android:background="@color/view_line" />

    <RelativeLayout
        android:id="@+id/rel_button2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_below="@+id/view1"
        android:layout_marginTop="@dimen/_10sdp">

        <TextView
            android:id="@+id/tv_graceful1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/graceful_shutdown"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />


        <TextView
            android:id="@+id/tv_graceful_desc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_graceful1"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="@string/graceful_desc"
            android:textColor="@color/viewcolorText"
            android:textSize="@dimen/_10sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_graceful_desc1"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:id="@+id/tv_graceful_ques1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/do_you_wish"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <RelativeLayout
                android:id="@+id/rel_graceful_button1"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/login_screen"
                android:text="@string/do_you_wish"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp">


                <ImageView
                    android:id="@+id/iv_graceful_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:src="@drawable/power_icon" />


                <TextView
                    android:id="@+id/tv_graceful_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:text="@string/force_power_off"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />


            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/rel_button2"
        android:layout_marginTop="@dimen/_7sdp"
        android:background="@color/view_line" />

    <RelativeLayout
        android:id="@+id/rel_button3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_below="@+id/view2"
        android:layout_marginTop="@dimen/_10sdp">

        <TextView
            android:id="@+id/tv_graceful2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/graceful_shutdown"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />


        <TextView
            android:id="@+id/tv_graceful_desc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_graceful2"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="@string/graceful_desc"
            android:textColor="@color/viewcolorText"
            android:textSize="@dimen/_10sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_graceful_desc2"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:id="@+id/tv_graceful_ques2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/do_you_wish"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <RelativeLayout
                android:id="@+id/rel_graceful_button2"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/login_screen"
                android:text="@string/do_you_wish"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp">


                <ImageView
                    android:id="@+id/iv_graceful_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:src="@drawable/power_icon" />


                <TextView
                    android:id="@+id/tv_graceful_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:text="@string/powerCycle"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />


            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/rel_button3"
        android:layout_marginTop="@dimen/_7sdp"
        android:background="@color/view_line" />


    <RelativeLayout
        android:id="@+id/rel_button4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_below="@+id/view3"
        android:layout_marginTop="@dimen/_5sdp">

        <TextView
            android:id="@+id/tv_powerrr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/poweron"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />


        <TextView
            android:id="@+id/tv_graceful_powerr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_powerrr"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="@string/poweronDesc"
            android:textColor="@color/viewcolorText"
            android:textSize="@dimen/_10sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_graceful_powerr"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:id="@+id/tv_graceful_ques_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/do_you_wish"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <RelativeLayout
                android:id="@+id/rel_graceful_button_power"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/login_screen"
                android:text="@string/do_you_wish"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp">


                <TextView
                    android:id="@+id/tv_graceful_button_power"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="@string/poweron"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />


            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/rel_button4"
        android:layout_marginTop="@dimen/_7sdp"
        android:background="@color/view_line" />


    <RelativeLayout
        android:id="@+id/rel_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@color/toast_bg"
        android:layout_marginBottom="@dimen/_30sdp"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rel_cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/close"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"/>



        <RelativeLayout
            android:id="@+id/rlll_folder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_cross">


            <TextView
                android:id="@+id/tv_usernamee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"></TextView>




        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_folderr"
            android:layout_below="@id/rlll_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp">


            <TextView
                android:id="@+id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:text="Password">

            </TextView>

        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/simpleProgressBarr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <ProgressBar

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/progress" />

    </RelativeLayout>


</RelativeLayout>