<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:text="@string/service_summary"
        android:textColor="@color/black" />

    <RelativeLayout
        android:id="@+id/rel_main_servicedetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_summary"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp">

        <RelativeLayout
            android:id="@+id/rel_processor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/processor"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/viewcolorText" />


            <TextView
                android:id="@+id/tv_processor"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:gravity="center|end"
                android:text="Dual E5-2630(24 Cores)"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/rel_processor"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@color/view_line" />

        <RelativeLayout
            android:id="@+id/rel_memory"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@+id/view1"
            android:layout_marginTop="@dimen/_7sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/memory"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/viewcolorText" />


            <TextView
                android:id="@+id/tv_memory"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center|end"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="Dual E5-2630(24 Cores)"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black" />

        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/rel_memory"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@color/view_line" />

        <RelativeLayout
            android:id="@+id/rel_hard_drive"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@+id/view2"
            android:layout_marginTop="@dimen/_7sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/harddrive"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/viewcolorText" />


            <TextView
                android:id="@+id/tv_harddrive"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center|end"
                android:layout_marginRight="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                android:text="Dual E5-2630(24 Cores)"
                android:textColor="@color/black" />

        </RelativeLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/rel_hard_drive"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@color/view_line" />


        <RelativeLayout
            android:id="@+id/rel_uplink"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@+id/view3"
            android:layout_marginTop="@dimen/_7sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/uplink"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/viewcolorText" />


            <TextView
                android:id="@+id/tv_uplink"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center|end"
                android:text="Dual E5-2630(24 Cores)"
                android:layout_marginRight="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black" />

        </RelativeLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/rel_uplink"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@color/view_line" />

        <RelativeLayout
            android:id="@+id/rel_bandwidth"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@+id/view4"
            android:layout_marginTop="@dimen/_7sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/bandwidth"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/viewcolorText" />


            <TextView
                android:id="@+id/tv_bandwisth"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center|end"
                android:text="Dual E5-2630(24 Cores)"
                android:layout_marginRight="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black" />

        </RelativeLayout>

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/rel_bandwidth"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@color/view_line" />

        <RelativeLayout
            android:id="@+id/rel_ddos"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@+id/view5"
            android:layout_marginTop="@dimen/_7sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/ddos"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/viewcolorText" />


            <TextView
                android:id="@+id/tv_ddos_protection"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center|end"
                android:text="Dual E5-2630(24 Cores)"
                android:layout_marginRight="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black" />

        </RelativeLayout>

        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/rel_ddos"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@color/view_line" />

        <RelativeLayout
            android:id="@+id/rel_ipv4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@+id/view6"
            android:layout_marginTop="@dimen/_7sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/ipv4"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/viewcolorText" />


            <TextView
                android:id="@+id/tv_ipv4"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center|end"
                android:text="Dual E5-2630(24 Cores)"
                android:layout_marginRight="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black" />

        </RelativeLayout>

        <View
            android:id="@+id/view7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/rel_ipv4"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@color/view_line" />

        <RelativeLayout
            android:id="@+id/rel_Additionalipv4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@+id/view7"
            android:layout_marginTop="@dimen/_7sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/Additionalipv4"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/viewcolorText" />


            <TextView
                android:id="@+id/tv_additional_ipv4"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center|end"
                android:text="Dual E5-2630(24 Cores)"
                android:layout_marginRight="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black" />

        </RelativeLayout>

        <View
            android:id="@+id/view8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/rel_Additionalipv4"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@color/view_line" />

        <RelativeLayout
            android:id="@+id/ddos_protection"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@+id/view8"
            android:layout_marginTop="@dimen/_7sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/software"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/viewcolorText" />


            <TextView
                android:layout_width="@dimen/_160sdp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center|end"
                android:text="Dual E5-2630(24 Cores)"
                android:layout_marginRight="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black" />

        </RelativeLayout>

        <View
            android:id="@+id/view9"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/ddos_protection"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@color/view_line" />

        <RelativeLayout
            android:id="@+id/rel_software"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@+id/view9"
            android:layout_marginTop="@dimen/_7sdp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/softwareManagement"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/viewcolorText" />


            <TextView
                android:layout_width="@dimen/_160sdp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center|end"
                android:text="Dual E5-2630(24 Cores)"
                android:layout_marginRight="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black" />

        </RelativeLayout>

        <View
            android:id="@+id/view10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/rel_software"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@color/view_line"
            android:visibility="gone"/>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/simpleProgressBarr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true">

        <ProgressBar

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/progress"/>

    </RelativeLayout>
</RelativeLayout>