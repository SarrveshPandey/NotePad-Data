<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rel_home"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_search_ticket"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="16dp"
            android:background="@drawable/search_file"
            android:fontFamily="sans-serif-light"
            android:hint="Search by Ticket ID"
            android:inputType="textCapCharacters"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="@color/searchText"
            android:textColorHint="@color/searchHint"
            android:textSize="@dimen/_13sdp">

        </EditText>

        <ImageView
            android:id="@+id/claer_search_ticket2"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/et_search_ticket"
            android:layout_alignBottom="@+id/et_search_ticket"
            android:layout_alignParentEnd="true"
            android:textAlignment="center"
            android:layout_marginRight="@dimen/_16sdp"
            app:srcCompat="@drawable/cancel_search" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/idRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_below="@+id/et_search_ticket"
            android:clipToPadding="false"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/no_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No data Found"
            android:textSize="@dimen/_16sdp"
            android:visibility="gone">

        </TextView>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/simpleProgressBarr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_centerInParent="true">

        <ProgressBar

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/progress"/>

    </RelativeLayout>


</RelativeLayout>
